<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="abdullahhafeez.me.prototype3.activities.HelpActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/helpicon"
        app:srcCompat="@drawable/help_icon2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heading1"
        android:padding="10dp"
        android:layout_below="@+id/helpicon"
        android:text="\u2022 How To Select An Overlay?"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading1"
        android:id="@+id/heading1text"
        android:padding="10dp"
        android:gravity="left"
        android:text="Select an overlay from the overlay panel on the bottom of the screen. See that the background of the selected overlay will change. The selected overlay will start to appear on your face."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heading2"
        android:padding="10dp"
        android:layout_below="@+id/heading1text"
        android:text="\u2022 How To Make a Video Editable?"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading2"
        android:id="@+id/heading2text"
        android:padding="10dp"
        android:gravity="left"
        android:text="Open the davigation drawer in main screen by sliding from left side of the screen. Select Settings from the menu. In Settings, make sure the Edit Video checkbox is checked. You will now be able to edit videos in future."/>


</RelativeLayout>
